{
  "variables": {
    "version": "{{env `VERSION`}}"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sudo {{.Vars}} sh {{.Path}}",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/vmtools.sh",
        "scripts/zerodisk.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "build/CentOS-6-x86_64-{{.Provider}}.box"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_additions_mode": "attach",
      "guest_additions_sha256": "974063ca9c7bde796dd77ba55d35583dc5d8bc27d53a6bfd81ae206978b133e2",
      "guest_os_type": "RedHat_64",
      "headless": "false",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "512" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ],
      "iso_url": "http://centos.mirror.transip.nl/6/isos/x86_64/CentOS-6.7-x86_64-netinstall.iso",
      "iso_checksum": "411da8c3f66839eef9ae47bf4515cc0b82f2a1dfc7b2d5bde2d203ca7e3220f3",
      "iso_checksum_type": "sha256",
      "ssh_username": "packer",
      "ssh_password": "packer",
      "ssh_wait_timeout": "120m",
      "boot_command": [ "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>" ],
      "disk_size": "32768",
      "hard_drive_interface": "sata",
      "http_directory": "http",
      "shutdown_command": "sudo /sbin/halt -p"
    }
  ]
}
